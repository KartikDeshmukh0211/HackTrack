    font-size: 1.1rem;
    color: var(--text-light);
    margin-bottom: 1rem;
  }

  .profile-bio {
    margin-bottom: 1.5rem;
    color: var(--text-dark);
    line-height: 1.6;
  }

  .profile-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

