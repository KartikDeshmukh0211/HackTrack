<!-- Problems Section -->
<section class="problems">
  <div class="section-header">
    <h2>Explore Problems</h2>
    <a href="/problems" class="view-all"
      >View all <i class="fas fa-arrow-right"></i
    ></a>
  </div>

  <div class="cards-container">
    <a href="/problems/<%= allProblems[0]._id %>">
      <div class="problem-card">
        <img src="<%= allProblems[0].image %>" alt="Restaurant food waste" />
        <h3><%= allProblems[0].title %></h3>
        <p class="card-meta"><%= allProblems[0].category %></p>
      </div>
    </a>

    <a href="/problems/<%= allProblems[1]._id %>">
      <div class="problem-card">
        <img src="<%= allProblems[1].image %>" alt="Solar panels" />
        <h3><%= allProblems[1].title %></h3>
        <p class="card-meta"><%= allProblems[1].category %></p>
      </div>
    </a>

    <a href="/problems/<%= allProblems[2]._id %>">
      <div class="problem-card">
        <img src="<%= allProblems[2].image %>" alt="Focus at work" />
        <h3><%= allProblems[2].title %></h3>
        <p class="card-meta"><%= allProblems[2].category %></p>
      </div>
    </a>
  </div>
</section>
