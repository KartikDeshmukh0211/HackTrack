<% layout("./layouts/boilerplate") %>
<body>
  <!-- Problems Section -->
  <section class="problems">
    <div class="top-container">
      <div class="header-section">
        <h1>Find a problem to solve</h1>
        <a class="post-problem-button" href="/problems/new">Post a problem</a>
      </div>

      <!-- Categories -->
      <div class="categories">
        <button class="category-tag">Healthcare</button>
        <button class="category-tag">Smart Cities</button>
        <button class="category-tag">Blockchain</button>
        <button class="category-tag">Human Resources</button>
        <button class="category-tag">AR/VR</button>
        <button class="category-tag">Environment</button>
        <button class="category-tag">Media & Communication</button>
        <button class="category-tag">Conservation</button>
        <button class="category-tag">Sustainability</button>
        <button class="category-tag">Finance</button>
        <button class="category-tag">Education</button>
        <button class="category-tag">Entertainment</button>
        <button class="category-tag">Legal Tech</button>
        <button class="category-tag">Agriculture</button>
        <button class="category-tag">Home Improvement</button>
        <button class="category-tag">Logistics</button>
        <button class="category-tag">Business</button>
        <button class="category-tag">Health & Wellness</button>
        <button class="category-tag">Retail</button>
        <button class="category-tag">Food & Beverage</button>
        <button class="category-tag">Media</button>
        <button class="category-tag">Energy</button>
        <button class="category-tag">Travel</button>
        <button class="category-tag">Public Sector</button>
        <button class="category-tag">Sports</button>
        <button class="category-tag">Gaming</button>
      </div>
      <div class="heading-box">
        <h2 class="newly-added">Problems</h2>
        <div class="search-container">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search" />
        </div>
      </div>
    </div>
    <div class="cards-container">
      <% for(let problem of allProblems){ %>
      <a href="/problems/<%= problem._id %>">
        <div class="problem-card">
          <img src="<%= problem.image %>" alt="Restaurant food waste" />
          <h3><%= problem.title %></h3>
          <p class="card-meta"><%= problem.category %></p>
        </div>
      </a>
      <% } %>
    </div>
  </section>
</body>
