<% layout("./layouts/boilerplate") %>
<body>
  <main class="solution-container">
    <div class="page-header">
      <h1>Explore Solutions</h1>
      <!-- <h1 class="page-title">Explore Solutions</h1> -->
      <a href="/solutions/new" class="btn btn-primary">
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Post a Solution
      </a>
    </div>

    <div class="filter-bar">
      <div>
        <span class="filter-label">Category:</span>
        <select class="filter-select">
          <option value="">All Categories</option>
          <option value="healthcare">Healthcare</option>
          <option value="finance">Finance</option>
          <option value="education">Education</option>
          <option value="logistics">Logistics</option>
          <option value="retail">Retail</option>
          <option value="food">Food & Beverage</option>
          <option value="media">Media</option>
          <option value="energy">Energy</option>
        </select>
      </div>
      <div>
        <span class="filter-label">Sort by:</span>
        <select class="filter-select">
          <option value="newest">Newest</option>
          <option value="popular">Most Popular</option>
          <option value="trending">Trending</option>
        </select>
      </div>
      <div class="search-box">
        <input
          type="text"
          class="search-input"
          placeholder="Search solutions..."
        />
        <button class="search-button">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
      </div>
    </div>

    <div class="solutions-grid">
      <!-- Solution Cards -->
      <% for(let solution of allSolutions){ %>
      <a href="/solutions/<%= solution._id %>" class="solution-card">
        <div class="card-image">
          <img
            src="<%= solution.image %>"
            alt="<%= solution.solution_title %>"
          />
        </div>
        <div class="card-content">
          <h2 class="card-title"><%= solution.solution_title %></h2>
          <p class="card-description"><%= solution.solution_breakdown %></p>
          <!-- <p class="card-description">
            A machine learning solution that helps restaurants predict food
            demand and reduce waste by analyzing historical data and trends.
          </p> -->
          <span class="card-category"><%= solution.category %></span>
        </div>
      </a>
      <% } %>

