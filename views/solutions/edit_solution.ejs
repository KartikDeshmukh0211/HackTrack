<% layout("./layouts/boilerplate") %>
<main class="post-solution-container">
  <h1 class="page-title">Edit the Solution</h1>

  <div class="form-card">
    <div class="form-header">
      <h2 class="form-header-title">Filled Something Incorrect????</h2>
      <p class="form-header-description">
        Edit the Solution and remove the incorrectness
      </p>
    </div>

    <form id="solutionForm" class="form-body" method="post" action="/solutions/<%= solution._id %>?_method=PUT">
      <div class="form-section">
        <h3 class="form-section-title">Basic Information</h3>

        <div class="form-group">
          <label for="solution_title" class="form-label">
            Solution Title<span class="form-required">*</span>
          </label>
          <input
            type="text"
            id="solution_title"
            name="solution[solution_title]"
            value="<%= solution.solution_title %>"
            class="form-control"
            placeholder="Enter a descriptive title for your solution"
            required
            minlength="10"
            maxlength="100"
          />
          <span class="form-hint"
            >Be clear and specific about what your solution accomplishes</span
          >
          <span class="form-error"
            >Title must be between 10 and 100 characters</span
          >
        </div>

        <div class="form-group">
          <label for="category" class="form-label">
            Category<span class="form-required">*</span>
          </label>
          <select
            id="category"
            name="solution[category]"
            class="form-select"
            required
          >
            <option value="<%= solution.category %>">
              <%= solution.category %>
            </option>
            <option value="healthcare">Healthcare</option>
            <option value="finance">Finance</option>
            <option value="education">Education</option>
            <option value="logistics">Logistics</option>
            <option value="retail">Retail</option>
            <option value="food">Food & Beverage</option>
            <option value="media">Media</option>
            <option value="energy">Energy</option>
            <option value="travel">Travel</option>
            <option value="public">Public Sector</option>
            <option value="sports">Sports</option>
            <option value="gaming">Gaming</option>
          </select>
          <span class="form-hint"
            >Choose the category that best fits your solution</span
          >
          <span class="form-error">Please select a category</span>
        </div>
      </div>

      <div class="form-section">
        <h3 class="form-section-title">Solution Details</h3>

        <div class="form-group">
          <label for="solution_breakdown" class="form-label">
            Solution Breakdown<span class="form-required">*</span>
          </label>
          <textarea
            id="solution_breakdown"
            name="solution[solution_breakdown]"
            class="form-control"
            placeholder="Provide a comprehensive overview of your solution"
            required
            minlength="50"
            maxlength="2000"
          ><%= solution.solution_breakdown %></textarea>
          <span class="form-hint"
            >Explain what your solution does and how it addresses the
            problem</span
          >
          <span class="form-error"
            >Solution breakdown must be between 50 and 2000 characters</span
          >
        </div>

        <div class="form-group">
          <label for="approach" class="form-label">
            Approach<span class="form-required">*</span>
          </label>
          <textarea
            id="approach"
            name="solution[approach]"
            class="form-control"
            placeholder="Describe your approach to implementing the solution"
            required
            minlength="50"
            maxlength="2000"
          ><%= solution.approach %></textarea>
          <span class="form-hint"
            >Detail the methodology, technologies, or strategies you used</span
          >
          <span class="form-error"
            >Approach must be between 50 and 2000 characters</span
          >
        </div>

        <div class="form-group">
          <label for="benefits" class="form-label">
            Benefits<span class="form-required">*</span>
          </label>
          <textarea
            id="benefits"
            name="solution[benefits]"
            class="form-control"
            placeholder="Outline the key benefits of your solution"
            required
            minlength="50"
            maxlength="1000"
          ><%= solution.benefits %></textarea>
          <span class="form-hint"
            >Explain how your solution creates value or improves upon existing
            alternatives</span
          >
          <span class="form-error"
            >Benefits must be between 50 and 1000 characters</span
          >
        </div>

        <div class="form-group">
          <label for="potential_impacts" class="form-label">
            Potential Impacts<span class="form-required">*</span>
          </label>
          <textarea
            id="potential_impacts"
            name="solution[potential_impacts]"
            class="form-control"
            placeholder="Describe the potential impacts of your solution"
            required
            minlength="50"
            maxlength="1000"
          ><%= solution.potential_impacts %></textarea>
          <span class="form-hint"
            >Discuss the broader implications and potential scale of your
            solution</span
          >
          <span class="form-error"
            >Potential impacts must be between 50 and 1000 characters</span
          >
        </div>
      </div>

