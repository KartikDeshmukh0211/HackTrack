<% layout("./layouts/boilerplate") %>
<body>
  <div class="post-problem-container">
    <h1 class="page-title">Post a Problem</h1>
    <form action="/problems" method="post">
      <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          placeholder="Enter a descriptive title"
          name="problem[title]"
          class="form-input"
          required
        />
        <div class="error-message">
          Title must be between 10 and 100 characters
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="problem[description]"
          class="form-textarea"
          required
          minlength="50"
          maxlength="1000"
          placeholder="Describe the problem in detail..."
        ></textarea>
        <div class="error-message">
          Description must be between 50 and 1000 characters
        </div>
      </div>

      <!-- <input type="text" placeholder="category" name="problem[category]" /> -->

      <div class="form-group">
        <label for="category" class="form-label">Category</label>
        <select
          id="category"
          name="problem[category]"
          class="form-select"
          required
        >
          <option value="">Select a category</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Smart Cities">Smart Cities</option>
          <option value="Blockchain">Blockchain</option>
          <option value="Human Resources">Human Resources</option>
          <option value="AR/VR">AR/VR</option>
          <option value="Environment">Environment</option>
          <option value="Media & Communication">Media & Communication</option>
          <option value="Conservation">Conservation</option>
          <option value="Sustainability">Sustainability</option>
          <option value="finance">Finance</option>
          <option value="education">Education</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Legal Tech">Legal Tech</option>
          <option value="logistics">Logistics</option>
          <option value="Agriculture">Agriculture</option>
          <option value="Home Improvement">Home Improvement</option>
          <option value="Business">Business</option>
          <option value="Health & Wellness">Health & Wellness</option>
          <option value="Retail">Retail</option>
          <option value="Food & Beverage">Food & Beverage</option>
          <option value="Media">Media</option>
          <option value="Energy">Energy</option>
          <option value="Travel">Travel</option>
          <option value="Public Sector">Public Sector</option>
          <option value="Sports">Sports</option>
          <option value="Gaming">Gaming</option>
          <option value="Others">Others</option>
        </select>
        <!-- <div class="error-message">Please select a category</div> -->
      </div>

      <!-- <input type="text" placeholder="difficulty" name="problem[difficulty]" /> -->
      <!-- <input type="text" placeholder="postedBy" name="problem[postedBy]" /> -->

      <div class="form-group">
        <label for="posted_by" class="form-label">Title</label>
        <input
          type="text"
          id="posted_by"
          placeholder="posted_by"
          name="problem[posted_by]"
          class="form-input"
          required
        />
      </div>

      <div class="button-group">
        <button
          type="button"
          class="btn btn-secondary"
          onclick="window.history.back()"
        >
          Cancel
        </button>
        <button class="btn btn-primary">Submit Problem</button>
      </div>
    </form>
  </div>
</body>
